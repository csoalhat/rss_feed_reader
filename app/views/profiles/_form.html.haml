= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
