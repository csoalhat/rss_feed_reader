!!!
%html
  %head
    %title RssFeedReader
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #wrapper

      #sidebar-wrapper
        .sidebar-nav
          %b.logo Read'R
          - if current_user
            %li.sidebar-brand= link_to "Home", articles_path
            %li= link_to 'Profile', current_user_profile_path
            / %li= link_to 'Feeds', feeds_path
            / %li= link_to 'Friendships', friendships_path
            / %li= link_to 'Articles', articles_path
            / %li= link_to 'Bookmarks', bookmarks_path
            %li= link_to 'Find Feeds', categories_path
            %li= link_to 'Add Feed', new_feed_path
            / %li= link_to 'Comments', comments_path
            %li= link_to 'Users', users_path
          #sessions
            - if current_user
              %p= current_user.email
              %p= link_to 'Logout', destroy_user_session_path, method: :delete
            / - flash.each do |name, msg|   
            /   = content_tag :div, msg, :id => "flash_#{name}"
      #page-content-wrapper
        / .content-header
        .page-content.inset
        = yield
