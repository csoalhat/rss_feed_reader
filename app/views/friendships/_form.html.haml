= form_for @friendship do |f|
  - if @friendship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@friendship.errors.count, "error")} prohibited this friendship from being saved:"
      %ul
        - @friendship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :friend
    = f.text_field :friend
  .actions
    = f.submit 'Save'
